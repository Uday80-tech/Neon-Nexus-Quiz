rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile if request.auth.uid == 'user123'.
     * @allow (get) User with ID 'user123' can read their profile if request.auth.uid == 'user123'.
     * @allow (update) User with ID 'user123' can update their profile if request.auth.uid == 'user123'.
     * @allow (delete) User with ID 'user123' can delete their profile if request.auth.uid == 'user123'.
     * @deny (create) User with ID 'user456' cannot create a profile with ID 'user123'.
     * @deny (get) User with ID 'user456' cannot read the profile of user 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to quiz history documents for a specific user.
     * @path /users/{userId}/quizHistory/{quizHistoryId}
     * @allow (create) User with ID 'user123' can create a quiz history entry under their profile.
     * @allow (get) User with ID 'user123' can read a quiz history entry under their profile.
     * @allow (update) User with ID 'user123' can update a quiz history entry under their profile.
     * @allow (delete) User with ID 'user123' can delete a quiz history entry under their profile.
     * @deny (create) User with ID 'user456' cannot create a quiz history entry under user 'user123'.
     * @deny (get) User with ID 'user456' cannot read a quiz history entry under user 'user123'.
     * @principle Enforces document ownership for all operations on quiz history.
     */
    match /users/{userId}/quizHistory/{quizHistoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to quiz question documents.
     * @path /questions/{questionId}
     * @allow (get) Anyone can read quiz questions.
     * @deny (create) Only admins can create questions (TODO: Implement admin check).
     * @deny (update) Only admins can update questions (TODO: Implement admin check).
     * @deny (delete) Only admins can delete questions (TODO: Implement admin check).
     * @principle Allows public read access but restricts write access to authorized users (e.g., admins).
     */
    match /questions/{questionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Implement admin role check
      allow update: if false; // TODO: Implement admin role check
      allow delete: if false; // TODO: Implement admin role check
    }

    /**
     * @description Controls access to leaderboard entry documents.
     * @path /leaderboard/{leaderboardEntryId}
     * @allow (get) Anyone can read leaderboard entries.
     * @deny (create) Only a backend service can create leaderboard entries (TODO: Implement backend service check).
     * @deny (update) Only a backend service can update leaderboard entries (TODO: Implement backend service check).
     * @deny (delete) Only a backend service can delete leaderboard entries (TODO: Implement backend service check).
     * @principle Allows public read access but restricts write access to a backend service.
     */
    match /leaderboard/{leaderboardEntryId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Implement backend service role check
      allow update: if false; // TODO: Implement backend service role check
      allow delete: if false; // TODO: Implement backend service role check
    }
  }
}