rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles. Only the user with the matching ID can read or write their profile.
     * @path /users/{userId}
     * @allow (create) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can create their profile if request.auth.uid == userId.
     * @allow (get) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can read their profile if request.auth.uid == userId.
     * @allow (update) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can update their profile if request.auth.uid == userId.
     * @allow (delete) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can delete their profile if request.auth.uid == userId.
     * @deny (create) - User 'someoneElse' cannot create a profile with ID 'UXMniPX2lDS5OgOxnGCtR1eZSCM2'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing all users is not permitted.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures quiz history entries. Only the owning user can access their quiz history.
     * @path /users/{userId}/quizHistory/{quizHistoryId}
     * @allow (create) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can create a quiz history entry under their ID.
     * @allow (get) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can read a quiz history entry under their ID.
     * @allow (update) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can update a quiz history entry under their ID.
     * @allow (delete) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can delete a quiz history entry under their ID.
     * @deny (create) - User 'someoneElse' cannot create a quiz history entry under user 'UXMniPX2lDS5OgOxnGCtR1eZSCM2'.
     * @principle Enforces path-based ownership.
     */
    match /users/{userId}/quizHistory/{quizHistoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to questions, but restricts write access (currently to no one).
     * @path /questions/{questionId}
     * @allow (get) - Any user can retrieve a question.
     * @allow (list) - Any user can list questions.
     * @deny (create) - No user can create a question (admin role is TODO).
     * @deny (update) - No user can update a question (admin role is TODO).
     * @deny (delete) - No user can delete a question (admin role is TODO).
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role validation.
    }

    /**
     * @description Allows public read access to leaderboard entries, but restricts write access to the owning user.
     * @path /leaderboard/{userId}
     * @allow (get) - Any user can retrieve a leaderboard entry.
     * @allow (list) - Any user can list leaderboard entries.
     * @allow (create) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can create their leaderboard entry if request.auth.uid == userId.
     * @allow (update) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can update their leaderboard entry if request.auth.uid == userId.
     * @allow (delete) - User 'UXMniPX2lDS5OgOxnGCtR1eZSCM2' can delete their leaderboard entry if request.auth.uid == userId.
     * @deny (create) - User 'someoneElse' cannot create a leaderboard entry with ID 'UXMniPX2lDS5OgOxnGCtR1eZSCM2'.
     * @principle Allows public read access, but enforces ownership for writes.
     */
    match /leaderboard/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}