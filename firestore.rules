/**
 * @fileoverview Firestore Security Rules for the Brain Battle quiz game.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and quiz history,
 * and allows public read access to questions and leaderboard entries. Write access to
 * questions and leaderboard is restricted, presumably managed by backend processes.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only by the user themselves.
 * - /users/{userId}/quizHistory/{quizHistoryId}: Quiz history for each user, accessible only by the user.
 * - /questions/{questionId}: Quiz questions, publicly readable, but write-protected.
 * - /leaderboard/{leaderboardEntryId}: Leaderboard entries, publicly readable, but write-protected.
 *
 * Key Security Decisions:
 * - Users can only access their own user profile and quiz history data.
 * - Questions and leaderboard data are publicly readable.
 * - Write access to questions and leaderboard is not directly granted to users,
 *   implying administrative or backend control.
 * - Data shape validation is relaxed to allow rapid iteration (prototyping mode).
 *
 * Denormalization for Authorization:
 * - User ownership is enforced through path-based rules in /users/{userId} and
 *   /users/{userId}/quizHistory/{quizHistoryId}, avoiding the need for `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces that only the authenticated user can access their own user profile.
     * @path /users/{userId}
     * @allow (create, update, delete): Authenticated user with ID 'user123' creates/updates/deletes /users/user123.
     * @deny (create, update, delete): Authenticated user with ID 'user456' attempts to create/update/delete /users/user123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces that only the authenticated user can access their own quiz history.
     * @path /users/{userId}/quizHistory/{quizHistoryId}
     * @allow (create, update, delete): Authenticated user with ID 'user123' creates/updates/deletes /users/user123/quizHistory/quiz1.
     * @deny (create, update, delete): Authenticated user with ID 'user456' attempts to create/update/delete /users/user123/quizHistory/quiz1.
     * @principle Enforces document ownership for writes within a user's data tree.
     */
    match /users/{userId}/quizHistory/{quizHistoryId} {
       function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to quiz questions, but restricts write access.
     * @path /questions/{questionId}
     * @allow get, list: Any user can read any question.
     * @deny create, update, delete: No user can create, update, or delete questions directly.
     * @principle Public read, restricted write.
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to leaderboard entries, but restricts write access.
     * @path /leaderboard/{leaderboardEntryId}
     * @allow get, list: Any user can read any leaderboard entry.
     * @deny create, update, delete: No user can create, update, or delete leaderboard entries directly.
     * @principle Public read, restricted write.
     */
    match /leaderboard/{leaderboardEntryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}